FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue T 300
);

regions
(
    sphereToCell
    {
        centre (0.05 0.05 0.05);  // Center of 0.1m × 0.1m × 0.1m domain
        radius 0.02;               // 2cm radius (20% of domain size)

        fieldValues
        (
            volScalarFieldValue T 500  // Hot sphere at 500K
        );
    }
);

// ************************************************************************* //
