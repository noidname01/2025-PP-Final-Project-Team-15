FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Hot-cold plate configuration
// Bottom half (z < 0.05m): 300K (cold)
// Top half (z >= 0.05m): 400K (hot)

defaultFieldValues
(
    volScalarFieldValue T 300  // Default: cold (300K)
);

regions
(
    boxToCell
    {
        box (0 0 0.05) (0.1 0.1 0.1);  // Top half: hot region
        fieldValues
        (
            volScalarFieldValue T 400  // Hot plate at 400K
        );
    }
);

// ************************************************************************* //
