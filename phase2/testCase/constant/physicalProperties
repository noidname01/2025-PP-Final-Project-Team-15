FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      physicalProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Thermal diffusivity [m^2/s]
// For aluminum: alpha ~ 9.7e-5 m^2/s
alpha           alpha [0 2 -1 0 0 0 0] 9.7e-5;

// CUDA grid dimensions (should match blockMesh cells for Phase 1)
cudaGridNx      50;
cudaGridNy      50;
cudaGridNz      50;

